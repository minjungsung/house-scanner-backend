{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run mindtests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/mindtests/main.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/mindtests/.env",
            "cwd": "${workspaceFolder}/mindtests",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/mindtests/pyproto:${workspaceFolder}/mindtests:$PYTHONPATH"
            }
        },
        {
            "name": "Configure developement environment ",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/mindtests/manage.py",
            "console": "integratedTerminal",
            "args": ["runserver", "0.0.0.0:8000"],
            "envFile": "${workspaceFolder}/mindtests/.env",
            "cwd": "${workspaceFolder}/mindtests",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/mindtests/pyproto:${workspaceFolder}/mindtests:$PYTHONPATH"
            }
        }
    ]
}